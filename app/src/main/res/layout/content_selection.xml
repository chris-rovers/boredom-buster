<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Selection"
    tools:showIn="@layout/activity_selection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorMainBG">

        <!-- Select budget -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/textbox_border"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/budget"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:layout_marginBottom="5dp"/>
            <!-- Budget buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <!-- Free price button -->
                    <Button
                        android:id="@+id/button_free"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/grey_button"
                        android:text="Free"
                        android:textSize="22sp"
                        android:onClick="BudgetSelect"
                        android:textColor="@color/colorWhite"/>
                    <!-- Low price button -->
                    <Button
                        android:id="@+id/button_low"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/grey_button"
                        android:text="Low"
                        android:textSize="22sp"
                        android:onClick="BudgetSelect"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <!-- Mid price button -->
                    <Button
                        android:id="@+id/button_mid"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/grey_button"
                        android:text="Mid"
                        android:textSize="22sp"
                        android:onClick="BudgetSelect"
                        android:textColor="@color/colorWhite"/>
                    <!-- High price button -->
                    <Button
                        android:id="@+id/button_high"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/grey_button"
                        android:text="High"
                        android:textSize="22sp"
                        android:onClick="BudgetSelect"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Select time frame -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/textbox_border"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:paddingTop="5dp"
                android:layout_marginBottom="15dp"/>
            <!-- Time buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <!-- Morning button -->
                <Button
                    android:id="@+id/button_morning"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/grey_button"
                    android:text="Morn"
                    android:textSize="22sp"
                    android:onClick="TimeSelect"
                    android:textColor="@color/colorWhite"/>
                <!-- Afternoon button -->
                <Button
                    android:id="@+id/button_afternoon"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/grey_button"
                    android:text="Aft"
                    android:textSize="22sp"
                    android:onClick="TimeSelect"
                    android:textColor="@color/colorWhite"/>
                <!-- Evening button -->
                <Button
                    android:id="@+id/button_evening"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/grey_button"
                    android:text="Eve"
                    android:textSize="22sp"
                    android:onClick="TimeSelect"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Select group size -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/textbox_border"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_size"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:paddingTop="5dp"
                android:layout_marginBottom="15dp"/>
            <!-- Group size buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <!-- Single in group button -->
                <Button
                    android:id="@+id/button_single"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/grey_button"
                    android:text="One"
                    android:textSize="22sp"
                    android:onClick="GroupSelect"
                    android:textColor="@color/colorWhite"/>
                <!-- Many in group button -->
                <Button
                    android:id="@+id/button_many"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/grey_button"
                    android:text="Many"
                    android:textSize="22sp"
                    android:onClick="GroupSelect"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/results_button"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:background="@drawable/menu_button"
            android:text="Find Activity"
            android:textSize="28sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>