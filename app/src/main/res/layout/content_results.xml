<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Results"
    tools:showIn="@layout/activity_results">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorMainBG">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                // Morning activity one
                <LinearLayout
                    android:id="@+id/morn_result_one"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_margin="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/textbox_border">
                        <TextView
                            android:id="@+id/morn_text_one"
                            android:layout_width="340dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textFontWeight="300"
                            android:textAlignment="center"
                            android:textSize="30sp"/>
                        <Button
                            android:id="@+id/morn_exp_button_one"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:onClick="ActivityExpand"
                            android:text="@string/plus"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/morn_image_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/morn_search_button_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="italic"/>
                </LinearLayout>
                // Morning activity two
                <LinearLayout
                    android:id="@+id/morn_result_two"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_margin="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/textbox_border">
                        <TextView
                            android:id="@+id/morn_text_two"
                            android:layout_width="340dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textFontWeight="300"
                            android:textAlignment="center"
                            android:textSize="30sp"/>
                        <Button
                            android:id="@+id/morn_exp_button_two"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:onClick="ActivityExpand"
                            android:text="@string/plus"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/morn_image_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/morn_search_button_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="italic"/>
                </LinearLayout>
                // Morning activity three
                <LinearLayout
                    android:id="@+id/morn_result_three"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_margin="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/textbox_border">
                        <TextView
                            android:id="@+id/morn_text_three"
                            android:layout_width="340dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textFontWeight="300"
                            android:textAlignment="center"
                            android:textSize="30sp"/>
                        <Button
                            android:id="@+id/morn_exp_button_three"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:onClick="ActivityExpand"
                            android:text="@string/plus"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/morn_image_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/morn_search_button_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="italic"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>